<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
    <formset>
        <form name="Se001_01SearchController">
            <field property="txtID_Name_Customer" depends="required,maxlength,fullCharacter">
                <msg name="maxlength" key="errors.maxlength"/>
                <arg position="0" name="maxlength" key="txtid_name_customer" />
                <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>20</var-value>
                </var>
                <msg name="required" key="errors.required"/>
                <arg position="0" name="required" key="txtid_name_customer" />
                <msg name="fullCharacter" key="errors.full_character"/>
                <arg position="0" name="fullCharacter" key="txtid_name_customer" />
            </field>

        </form>

    </formset>
</form-validation>