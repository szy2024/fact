<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
    <formset>
        <form name="Cm001_02UpdateController">
            <field property="password" depends="required,maxlength">
                <msg name="maxlength" key="errors.maxlength"/>
                <arg position="0" name="maxlength" key="Password" />
                <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>20</var-value>
                </var>
                <msg name="required" key="errors.required"/>
                <arg position="0" name="required" key="Password" />

            </field>
            <field property="passwordNew" depends="required,maxlength,mask">
                <msg name="maxlength" key="errors.maxlength"/>
                <arg position="0" name="maxlength" key="PasswordNew" />
                <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>20</var-value>
                </var>
                <msg name="required" key="errors.required"/>
                <arg position="0" name="required" key="PasswordNew" />
                <msg name="mask" key="errors.alpha_numeric_sign"/>
                <arg position="0" name="mask" key="PasswordNew" />
                <var>
                    <var-name>mask</var-name>
                    <var-value>${ALPHA_NUMERIC_SIGN}</var-value>
                </var>

            </field>
            <field property="passwordConfirm" depends="required,maxlength">
                <msg name="maxlength" key="errors.maxlength"/>
                <arg position="0" name="maxlength" key="PasswordConfirm" />
                <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>20</var-value>
                </var>
                <msg name="required" key="errors.required"/>
                <arg position="0" name="required" key="PasswordConfirm" />

            </field>

        </form>

    </formset>
</form-validation>